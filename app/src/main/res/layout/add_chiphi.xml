<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/IdComputerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Chi Phí"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtChiPhiMa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Mã Chi Phí"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ComputerNameTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Chi Phí"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtChiPhiTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="VD: Tiền nước"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ComputerTypeTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số Tiền"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtChiPhiSoTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="vnđ"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SeatLocationTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời Gian"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtChiPhiThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="dd/mm/yy"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/computerStatusID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi Chú"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtChiPhiGhiChu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ghi chú..."
            android:inputType="text" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMannv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Nhân Viên"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtMaNVChiPhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="abc123"
            android:inputType="text" />

    </LinearLayout>



    <Button
        android:id="@+id/btnTaoMoiChiPhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#000000"
        android:text="Tạo mới chi phí" />

</LinearLayout>