<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lavender"
            android:text="Chi Phí"
            android:id="@+id/txtChiPhiLabel"
            android:textAlignment="center"
            android:textStyle="bold"

            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtChiPhiLabel"
            >


            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtChiPhiLabel"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Chi Phí:"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/txtTenChiPhi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTenChiPhi"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Số Tiền:"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/txtTien"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textStyle="bold" />




            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Thời Gian:"

                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@id/txtTien"/>
                <TextView
                    android:id="@+id/txtThoiGian"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Ghi Chú:"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@id/txtThoiGian"/>
                <TextView
                    android:id="@+id/txtGhiChu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Mã Nhân Viên:"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/txtGhiChu"/>
                <TextView
                    android:id="@+id/txtMaNV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </TableRow>


            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSuaChiPhi"
                    android:text="Sửa"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnXoaChiPhi"
                    android:text="Xóa"/>


            </TableRow>







        </TableLayout>









    </RelativeLayout>



</androidx.cardview.widget.CardView>