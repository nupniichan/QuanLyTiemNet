<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/svdetail_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="Service Image" />

    <TextView
        android:id="@+id/svdetail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/svdetail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên dịch vụ: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/svdetail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại dịch vụ: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/svdetail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/svdetail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả: "
        android:textStyle="bold" />
</LinearLayout>